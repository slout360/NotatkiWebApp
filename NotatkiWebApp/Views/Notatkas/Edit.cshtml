@model NotatkiWebApp.Models.Notatka

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notatka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tytul" class="control-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tresc" class="control-label"></label>
                <textarea asp-for="Tresc" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategoria" class="control-label"></label>
                <select asp-for="Kategoria" class="form-control" asp-items="Html.GetEnumSelectList<NotatkiWebApp.Models.Kategoria>()"></select>
                <span asp-validation-for="Kategoria" class="text-danger"></span>
            </div>
            <div class="form-group, mt-3">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-1"></i> Powrót
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
